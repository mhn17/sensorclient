<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.hammerton.sensorClient">

    <application
        android:name=".SensorClientApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.hammerton.sensorClient.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.hammerton.sensorClient.activities.SingleImageActivity"
            android:label="@string/title_activity_single_image"
            android:parentActivityName="de.hammerton.sensorClient.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.hammerton.sensorClient.activities.MainActivity" />
        </activity>
    </application>

</manifest>
